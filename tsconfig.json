{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/config/*": ["config/*"]
    },
    "types": ["node"]
  },
  "include": [
    "api/**/*",
    "lib/**/*",
    "types/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vercel"
  ]
}

